{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2019", "dom"],
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}